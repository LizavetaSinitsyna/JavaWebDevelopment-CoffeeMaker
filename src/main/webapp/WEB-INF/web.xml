<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.epamtc.coffee_machine.controller.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/Controller</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Registration</servlet-name>
		<jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SuccessRegistration</servlet-name>
		<jsp-file>/WEB-INF/jsp/successRegistration.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>SuccessRegistration</servlet-name>
		<url-pattern>/successRegistration</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ForbidenAccess</servlet-name>
		<jsp-file>/WEB-INF/jsp/forbidenAccess.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>ForbidenAccess</servlet-name>
		<url-pattern>/forbidenAccess</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SuccessEdit</servlet-name>
		<jsp-file>/WEB-INF/jsp/successEdit.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>SuccessEdit</servlet-name>
		<url-pattern>/successEdit</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FailedEdit</servlet-name>
		<jsp-file>/WEB-INF/jsp/failedEdit.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>FailedEdit</servlet-name>
		<url-pattern>/failedEdit</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>by.epamtc.coffee_machine.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>AdminAccessFilter</filter-name>
		<filter-class>by.epamtc.coffee_machine.filter.AdminAccessFilter</filter-class>
		<init-param>
			<param-name>commands</param-name>
			<param-value>view_product_edit</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>AdminAccessFilter</filter-name>
		<url-pattern>/Controller</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>LoginAccessFilter</filter-name>
		<filter-class>by.epamtc.coffee_machine.filter.LoginAccessFilter</filter-class>
		<init-param>
			<param-name>commands</param-name>
			<param-value>view_basket</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>LoginAccessFilter</filter-name>
		<url-pattern>/Controller</url-pattern>
	</filter-mapping>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/errorPage.jsp</location>
	</error-page>
</web-app>
